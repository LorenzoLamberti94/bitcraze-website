downloadGithubRepoDoc "crazyflie-firmware" "2022.03" "no_search_index"
downloadGithubRepoDoc "crazyflie-firmware" "2022.01" "no_search_index"
downloadGithubRepoDoc "crazyflie-firmware" "2021.06" "no_search_index"
